#!/bin/bash

. ../git_utils.sh

mkdir remote && cd "$_"

# remote repo
git init
create_commit

# local repo
cd ..
mkdir "local" && cd "$_"

git clone ../remote .

open-task.sh 1234 minor

test "$(git branch --show-current)" = "feature/1234"
test -f .CI_TASKID
test "$(cat .CI_TASKID)" = "1234"
test -f .CI_NEXTRELEASE
test "$(cat .CI_NEXTRELEASE)" = "minor"

test "$(git log -1 --format="%s")" = "branch feature/1234 started"